<div class="well">
  <h2><%= action_name.humanize %> Topic</h2>

<%= simple_form_for [@forum, @topic] do |f| %>

  <%= f.input :title, :input_html => { :class => "span7"} %>
  <%= f.input :body, :as => :text, :input_html => { :rows => 10, :class => "span7"} %>
  <%= f.submit "submit", :class => "btn btn-success" %> or <%= link_to "cancel", @topic.nil? ?  @topic : @forum %>
<% end %>
</div>