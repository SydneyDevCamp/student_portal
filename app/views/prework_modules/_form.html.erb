<%= simple_form_for(@prework_module) do |f| %>
  <%= f.error_notification %>

    <%= f.input :order %>
    <%= f.input :name, :input_html => { :class => "span7" } %>
    <%= f.input :intro, :input_html => { :rows => 10, :class => "span7" } %>
    <%= f.input :resources, :input_html => { :rows => 10, :class => "span7" } %>
    <%= f.input :forum_link, :input_html => { :rows => 10, :class => "span7" } %>
    <%= f.input :module_type, :collection => ['knowledge', 'skill'], :as => :radio_buttons %>

    <%= f.button :submit %>

<% end %>
